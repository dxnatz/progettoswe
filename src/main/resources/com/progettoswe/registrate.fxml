<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.*?>


<GridPane xmlns="http://javafx.com/javafx/8.0.171"
          xmlns:fx="http://javafx.com/fxml/1"
          fx:controller="com.progettoswe.controller.RegistrationController"
          alignment="CENTER" hgap="10" vgap="10">

    <Label text="Registrazione" GridPane.columnIndex="0" GridPane.rowIndex="0"
           style="-fx-font-weight: bold; -fx-font-size: 25px;" GridPane.columnSpan="2"/>
    
    <Label text="Nome:" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
    <TextField fx:id="nomeTextField" promptText="Inserisci il tuo Nome" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
    
    <Label text="Cognome:" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
    <TextField fx:id="cognomeTextField" promptText="Inserisci il tuo Cognome" GridPane.columnIndex="1" GridPane.rowIndex="2"/>
    
    <Label text="Codice Fiscale:" GridPane.columnIndex="0" GridPane.rowIndex="3"/>
    <TextField fx:id="codiceFiscaleTextField" promptText="Inserisci il tuo Codice Fiscale" GridPane.columnIndex="1" GridPane.rowIndex="3"/>
    
    <Label text="Email:" GridPane.columnIndex="0" GridPane.rowIndex="4"/>
    <TextField fx:id="emailTextField" promptText="Inserisci la tua Email" GridPane.columnIndex="1" GridPane.rowIndex="4"/>
    
    <Label text="Password:" GridPane.columnIndex="0" GridPane.rowIndex="5"/>
    <PasswordField fx:id="passwordTextField" promptText="Inserisci la tua Password" GridPane.columnIndex="1" GridPane.rowIndex="5"/>
    
    <Label text="Cellulare:" GridPane.columnIndex="0" GridPane.rowIndex="6"/>
    <TextField fx:id="cellulareTextField" promptText="Inserisci il tuo Cellulare" GridPane.columnIndex="1" GridPane.rowIndex="6"/>
    
    <Label text="Data di Nascita:" GridPane.columnIndex="0" GridPane.rowIndex="7"/>
    <DatePicker fx:id="dataNascitaPicker" GridPane.columnIndex="1" GridPane.rowIndex="7"/>
    
    <Label text="Indirizzo di Casa:" GridPane.columnIndex="0" GridPane.rowIndex="8"/>
    <TextField fx:id="indirizzoTextField" promptText="Inserisci il tuo Indirizzo" GridPane.columnIndex="1" GridPane.rowIndex="8"/>
    
    <Button fx:id="registerButton" text="Registrati" onAction="#handleRegistration"
            GridPane.columnIndex="0" GridPane.rowIndex="9" GridPane.columnSpan="2"/>
    
</GridPane>
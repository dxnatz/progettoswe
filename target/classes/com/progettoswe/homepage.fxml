<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.progettoswe.controller.HomePageController">
    
    <top>
        <HBox spacing="10" alignment="CENTER">
            <TextField fx:id="searchField" promptText="Cerca per titolo, autore..."/>
            <Button text="Cerca" onAction="#searchBooks"/>
            <Button text="Logout" onAction="#logout"/>
        </HBox>
    </top>
    
    <center>
        <VBox spacing="10">
            <Label text="Catalogo Libri"/>
            <ListView fx:id="catalogList"/>
        </VBox>
    </center>
    
    <right>
        <VBox spacing="10">
            <Label text="Libri Preferiti"/>
            <ListView fx:id="favoriteBooksList"/>
            <HBox spacing="5">
                <Button text="Aggiungi" onAction="#addToFavorites"/>
                <Button text="Rimuovi" onAction="#removeFromFavorites"/>
            </HBox>
        </VBox>
    </right>
    
    <bottom>
        <VBox spacing="10">
            <Label text="Prestiti Attivi"/>
            <VBox fx:id="loansSection" spacing="5"/>
            <HBox spacing="5">
                <Button text="Prolunga Prestito" onAction="#extendLoan"/>
                <Button text="Cancella Prestito" onAction="#cancelLoan"/>
            </HBox>
        </VBox>
    </bottom>
</BorderPane>

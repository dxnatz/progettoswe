<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.effect.*?>
<?import javafx.scene.shape.*?>

<VBox alignment="CENTER" spacing="20" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.progettoswe.controller.RegistrationController" style="-fx-background-color: #f8f9fa;">

    <!-- Header -->
    <VBox alignment="CENTER" spacing="8">
        <StackPane>
            <Rectangle width="52" height="52" arcWidth="12" arcHeight="12" fill="#4361ee">
                <effect>
                    <InnerShadow color="#3a0ca3" radius="4"/>
                </effect>
            </Rectangle>
            <Label text="LMS" style="-fx-font-weight: bold; -fx-text-fill: white; -fx-font-size: 16;"/>
        </StackPane>

        <Label text="Crea il tuo account" style="-fx-text-fill: #495057; -fx-font-size: 14;"/>
    </VBox>

    <!-- Form Container -->
    <VBox alignment="CENTER" spacing="12" style="-fx-background-color: white; -fx-max-width: 750; -fx-background-radius: 10; -fx-padding: 24 100 24 100; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.05), 8, 0, 0, 3);">
        <GridPane hgap="10" vgap="10" alignment="CENTER">
            <columnConstraints>
                <ColumnConstraints hgrow="NEVER" minWidth="100"/>
                <ColumnConstraints hgrow="ALWAYS" minWidth="220"/>
            </columnConstraints>

            <!-- Riga 0: Nome -->
            <Label text="Nome" style="-fx-text-fill: #495057; -fx-font-size: 13;" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
            <TextField fx:id="nomeTextField" promptText="Mario" style="-fx-control-inner-background: #f8f9fa; -fx-background-radius: 6; -fx-border-radius: 6; -fx-border-color: #e9ecef; -fx-border-width: 1; -fx-pref-height: 38; -fx-font-size: 13; -fx-padding: 0 12;" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

            <!-- Riga 1: Cognome -->
            <Label text="Cognome" style="-fx-text-fill: #495057; -fx-font-size: 13;" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
            <TextField fx:id="cognomeTextField" promptText="Rossi" style="-fx-control-inner-background: #f8f9fa; -fx-background-radius: 6; -fx-border-radius: 6; -fx-border-color: #e9ecef; -fx-border-width: 1; -fx-pref-height: 38; -fx-font-size: 13; -fx-padding: 0 12;" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

            <!-- Riga 2: Codice Fiscale -->
            <Label text="Codice Fiscale" style="-fx-text-fill: #495057; -fx-font-size: 13;" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
            <TextField fx:id="codiceFiscaleTextField" promptText="RSSMRA80A01H501U" style="-fx-control-inner-background: #f8f9fa; -fx-background-radius: 6; -fx-border-radius: 6; -fx-border-color: #e9ecef; -fx-border-width: 1; -fx-pref-height: 38; -fx-font-size: 13; -fx-padding: 0 12;" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

            <!-- Riga 3: Email -->
            <Label text="Email" style="-fx-text-fill: #495057; -fx-font-size: 13;" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
            <TextField fx:id="emailTextField" promptText="mario.rossi@example.com" style="-fx-control-inner-background: #f8f9fa; -fx-background-radius: 6; -fx-border-radius: 6; -fx-border-color: #e9ecef; -fx-border-width: 1; -fx-pref-height: 38; -fx-font-size: 13; -fx-padding: 0 12;" GridPane.rowIndex="3" GridPane.columnIndex="1"/>

            <!-- Riga 4: Password -->
            <Label text="Password" style="-fx-text-fill: #495057; -fx-font-size: 13;" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
            <PasswordField fx:id="passwordTextField" promptText="••••••••" style="-fx-control-inner-background: #f8f9fa; -fx-background-radius: 6; -fx-border-radius: 6; -fx-border-color: #e9ecef; -fx-border-width: 1; -fx-pref-height: 38; -fx-font-size: 13; -fx-padding: 0 12;" GridPane.rowIndex="4" GridPane.columnIndex="1"/>

            <!-- Riga 5: Cellulare -->
            <Label text="Cellulare" style="-fx-text-fill: #495057; -fx-font-size: 13;" GridPane.rowIndex="5" GridPane.columnIndex="0"/>
            <TextField fx:id="cellulareTextField" promptText="+39 1234567890" style="-fx-control-inner-background: #f8f9fa; -fx-background-radius: 6; -fx-border-radius: 6; -fx-border-color: #e9ecef; -fx-border-width: 1; -fx-pref-height: 38; -fx-font-size: 13; -fx-padding: 0 12;" GridPane.rowIndex="5" GridPane.columnIndex="1"/>

            <!-- Riga 6: Data di Nascita -->
            <Label text="Data di Nascita" style="-fx-text-fill: #495057; -fx-font-size: 13;" GridPane.rowIndex="6" GridPane.columnIndex="0"/>
            <DatePicker fx:id="dataNascitaPicker" style="-fx-background-radius: 6; -fx-border-radius: 6; -fx-border-color: #e9ecef; -fx-border-width: 1; -fx-pref-height: 38; -fx-font-size: 13; -fx-pref-width: 220;" GridPane.rowIndex="6" GridPane.columnIndex="1"/>

            <!-- Riga 7: Indirizzo -->
            <Label text="Indirizzo" style="-fx-text-fill: #495057; -fx-font-size: 13;" GridPane.rowIndex="7" GridPane.columnIndex="0"/>
            <TextField fx:id="indirizzoTextField" promptText="Via Roma 123, Milano" style="-fx-control-inner-background: #f8f9fa; -fx-background-radius: 6; -fx-border-radius: 6; -fx-border-color: #e9ecef; -fx-border-width: 1; -fx-pref-height: 38; -fx-font-size: 13; -fx-padding: 0 12;" GridPane.rowIndex="7" GridPane.columnIndex="1"/>
        </GridPane>

        <!-- Pulsanti -->
        <HBox alignment="CENTER" spacing="10" style="-fx-padding: 10 0 0 0;">
            <Button fx:id="backButton" text="Indietro" onAction="#handleBack" style="
                -fx-background-color: transparent;
                -fx-text-fill: #6c757d;
                -fx-font-weight: bold;
                -fx-border-color: #e9ecef;
                -fx-border-width: 1;
                -fx-border-radius: 6;
                -fx-background-radius: 6;
                -fx-pref-width: 100;
                -fx-pref-height: 38;
                -fx-font-size: 13;
                -fx-cursor: hand;"/>

            <Button fx:id="registerButton" text="Registrati" onAction="#handleRegistration" style="
                -fx-background-color: #4361ee;
                -fx-text-fill: white;
                -fx-font-weight: bold;
                -fx-background-radius: 6;
                -fx-pref-width: 120;
                -fx-pref-height: 38;
                -fx-font-size: 13;
                -fx-cursor: hand;">
                <effect>
                    <DropShadow color="#4361ee60" radius="6" spread="0.15"/>
                </effect>
            </Button>
        </HBox>
    </VBox>

    <padding>
        <Insets bottom="30" left="30" right="30" top="30"/>
    </padding>
</VBox>
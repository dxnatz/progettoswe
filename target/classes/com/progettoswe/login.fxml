<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.*?>


<VBox alignment="CENTER" spacing="10.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.progettoswe.controller.LoginController">
      <Label text="LOGIN" style="-fx-font-weight: bold; -fx-font-size: 25px;"/>
      <HBox alignment="CENTER" spacing="10.0">
         <TextField fx:id="emailTextField" promptText="E-Mail" prefWidth="150"/>
         <PasswordField fx:id="passwordTextField" promptText="Password" prefWidth="150" />
         <Button fx:id="loginButton" text="Login" onAction="#handleLogin"/>
         <Button fx:id="registrateButton" text="Registrati" onAction="#switchToRegistrate"/>
      </HBox>
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
</VBox>



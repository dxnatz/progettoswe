<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.*?>

<GridPane xmlns="http://javafx.com/javafx/8.0.171"
          xmlns:fx="http://javafx.com/fxml/1"
          fx:controller="com.progettoswe.controller.LoginController"
          alignment="CENTER" hgap="10" vgap="10">

    <!-- Titolo -->
    <Label text="LOGIN" GridPane.columnIndex="0" GridPane.rowIndex="0"
           style="-fx-font-weight: bold; -fx-font-size: 25px;" GridPane.columnSpan="2"/>

    <!-- Campo Email -->
    <Label text="E-Mail:" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
    <TextField fx:id="emailTextField" promptText="Inserisci la tua E-Mail" GridPane.columnIndex="1" GridPane.rowIndex="1"/>

    <!-- Campo Password -->
    <Label text="Password:" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
    <PasswordField fx:id="passwordTextField" promptText="Inserisci la tua Password" GridPane.columnIndex="1" GridPane.rowIndex="2"/>

    <!-- Pulsanti -->
    <HBox GridPane.columnIndex="1" GridPane.rowIndex="3" alignment="CENTER_RIGHT" spacing="10">
        <Button fx:id="loginButton" text="Login" onAction="#handleLogin"/>
        <Button fx:id="registrateButton" text="Registrati" onAction="#switchToRegistrate"/>
    </HBox>

</GridPane>
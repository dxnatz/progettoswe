<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.progettoswe.controller.ProfileController">
    
    <top>
        <HBox spacing="10" alignment="CENTER">
            <Label text="Profilo Utente" style="-fx-font-size: 24px;"/>
        </HBox>
    </top>
    
    <center>
        <GridPane hgap="10" vgap="10">
            <padding>
                <Insets top="20" right="20" bottom="20" left="20"/>
            </padding>
            <Label text="Nome:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
            <TextField fx:id="nome" GridPane.rowIndex="0" GridPane.columnIndex="1"/>
            
            <Label text="Cognome:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
            <TextField fx:id="cognome" GridPane.rowIndex="1" GridPane.columnIndex="1"/>
            
            <Label text="Email:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
            <TextField fx:id="email" GridPane.rowIndex="2" GridPane.columnIndex="1"/>
            
            <Label text="Vecchia Password:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
            <PasswordField fx:id="vecchiaPassword" GridPane.rowIndex="3" GridPane.columnIndex="1"/>
            
            <Label text="Nuova Password:" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
            <PasswordField fx:id="password" GridPane.rowIndex="4" GridPane.columnIndex="1"/>
            
            <Label text="Conferma Nuova Password:" GridPane.rowIndex="5" GridPane.columnIndex="0"/>
            <PasswordField fx:id="confermaPassword" GridPane.rowIndex="5" GridPane.columnIndex="1"/>
            
            <Button text="Salva" onAction="#salvaInformazioni" GridPane.rowIndex="6" GridPane.columnIndex="1" HBox.hgrow="ALWAYS"/>
        </GridPane>
    </center>
    
    <bottom>
        <HBox spacing="10" alignment="CENTER">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>
            <Button text="Indietro" onAction="#tornaIndietro"/>
        </HBox>
    </bottom>
    
</BorderPane>